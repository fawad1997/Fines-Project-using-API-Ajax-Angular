@{ ViewBag.Title = "Index"; }
<h2>Angular Js Practice</h2>
@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/Angular/myAngular.js"></script>

<div ng-app="Homeapp">
    <div ng-controller="MyFirstController">
        Item Name: <input type="text" ng-model="item" />
        {{item | uppercase}} <br/>
        Price: <input type="number" ng-model="price" />
        {{price | currency:"Rs. "}}<br/>
        Search Student : <input type="text" ng-model="stdnam"/>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Reg No</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="student in students | orderBy: 'name'| filter: stdnam">
                    <td>{{student.reg}}</td>
                    <td>{{student.name}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>